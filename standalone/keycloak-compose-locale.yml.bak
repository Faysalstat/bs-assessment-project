version: "3.8"

services:
  keycloak:
    image: jboss/keycloak
    restart: always
    container_name: keycloak
    ports:
      - "8055:8055"
    environment:
      KEYCLOAK_USER: admin
      KEYCLOAK_PASSWORD: admin
      DB_VENDOR: mysql
      DB_ADDR: mysql
      DB_DATABASE: keycloak
      DB_USER: root
      DB_PASSWORD: root
      DB_SCHEMA_UPDATE: update
